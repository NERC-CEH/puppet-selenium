<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
  <dict>
    <key>KeepAlive</key>
    <dict>
      <key>SuccessfulExit</key>
      <false/>
    </dict>
    <key>Label</key>
    <string><%=@plist_label%></string>
    <key>ProgramArguments</key>
    <array>
      <% @actual_command.reject(&:empty?).each do  | part | -%>
        <string><%=part%></string>
      <% end -%>
    </array>
    <key>EnvironmentVariables</key>
    <dict>
      <% @environment.each_pair do |key, value| -%>
        <key><%=key%></key>
        <string><%=value%></string>
      <% end -%>
    </dict>
    <key>Debug</key>
    <true/>
    <key>RunAtLoad</key>
    <true/>
    <key>StandardOutPath</key>
    <string>/Users/<%=@user%>/Library/Logs/<%=@service_name%>.log</string>
    <key>StandardErrorPath</key>
    <string>/Users/<%=@user%>/Library/Logs/<%=@service_name%>_error.log</string>
  </dict>
</plist>